#! /usr/bin/bash
if [ -z "$1" ]; then
  echo "No TABLE_NAME argument supplied eg. ./bin/ecs/connect-to-service 7f546d4004f64c78bb061e6d4171f6ab backend-flask"
  exit 1
fi
TASK_ID=$1

if [ -z "$2" ]; then
  echo "No CONTAINER_NAME argument supplied eg. ./bin/ecs/connect-to-service 7f546d4004f64c78bb061e6d4171f6ab backend-flask"
  exit 1
fi
CONTAINER_NAME=$2

aws ecs execute-command \
--region $AWS_DEFAULT_REGION \
--cluster cruddur \
--task $TASK_ID \
--container CONTAINER_NAME \
--command "/bin/bash" \
--interactive